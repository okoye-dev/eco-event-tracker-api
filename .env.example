NODE_ENV=development

# Supabase project settings
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Postgres connection (Supabase pooled or direct)
DATABASE_URL=postgresql://postgres.your-project-ref:password@aws-0-region.pooler.supabase.com:6543/postgres
DB_DIALECT=postgres
DB_SSL=true

# Optional fine-grained DB config (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eco_event_tracker
DB_USER=postgres
DB_PASSWORD=postgres
